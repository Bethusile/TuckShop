{
  "compilerOptions": {
    // --- Project Structure ---
    "rootDir": ".",
    "outDir": "dist",
    
    // --- ES Module Environment Settings (Crucial for NodeNext) ---
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "esModuleInterop": true,
    
    // --- Path Aliases (For clean imports like @root/knexfile.js) ---
    "baseUrl": "./", 
    "paths": {
      "@root/*": ["*"] 
    },
    
    // --- Type Definitions and Checks ---
    "types": ["node", "express", "pg", "cors"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // --- Output Options ---
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*.ts", "knexfile.ts"],
  "exclude": ["node_modules", "dist"]
}